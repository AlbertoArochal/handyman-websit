---
import Layout from '../layouts/Layout.astro';

const services = [
	{
		name: "Plumbing Repairs",
		description: "From leaky faucets to pipe replacements, we handle all plumbing issues.",
		icon: "üöø"
	},
	{
		name: "Electrical Work",
		description: "Safe and reliable electrical repairs and installations.",
		icon: "‚ö°"
	},
	{
		name: "Drywall & Patching",
		description: "Professional drywall installation and damage repair.",
		icon: "üß±"
	},
	{
		name: "Carpentry",
		description: "Custom woodwork, shelving, and furniture repairs.",
		icon: "ü™µ"
	},
	{
		name: "Painting",
		description: "Interior and exterior painting with professional finish.",
		icon: "üé®"
	},
	{
		name: "Flooring",
		description: "Installation and repair of various flooring types.",
		icon: "üè†"
	},
	{
		name: "Door & Window Repair",
		description: "Fix or replace damaged doors and windows.",
		icon: "ü™ü"
	},
	{
		name: "General Maintenance",
		description: "Regular home maintenance and inspection services.",
		icon: "üîç"
	}
];
---

<Layout title="Services">
	<section class="services-hero">
		<div class="container">
			<h1>Our Services</h1>
			<p>We offer a comprehensive range of handyman services to keep your home in perfect condition</p>
		</div>
	</section>

	<section class="services-list">
		<div class="container">
			<div class="services-grid">
				{services.map(service => (
					<div class="service-card">
						<div class="service-icon">{service.icon}</div>
						<h3>{service.name}</h3>
						<p>{service.description}</p>
						<a href="/contact" class="service-link">Learn More ‚Üí</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<section class="service-process">
		<div class="container">
			<h2>Our Process</h2>
			<div class="process-steps">
				<div class="step">
					<div class="step-number">1</div>
					<h3>Contact Us</h3>
					<p>Describe your project or issue</p>
				</div>
				<div class="step">
					<div class="step-number">2</div>
					<h3>Free Assessment</h3>
					<p>We evaluate and provide a quote</p>
				</div>
				<div class="step">
					<div class="step-number">3</div>
					<h3>Schedule Service</h3>
					<p>Pick a time that works for you</p>
				</div>
				<div class="step">
					<div class="step-number">4</div>
					<h3>Quality Work</h3>
					<p>Expert service with attention to detail</p>
				</div>
			</div>
		</div>
	</section>

	<style>
		.services-hero {
			background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
			color: white;
			padding: 4rem 0;
			text-align: center;
		}

		.services-hero h1 {
			color: white;
			font-size: 3rem;
		}

		.services-hero p {
			color: rgba(255, 255, 255, 0.9);
			font-size: 1.1rem;
		}

		.services-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
			gap: 2rem;
		}

		.service-card {
			background-color: white;
			padding: 2rem;
			border-radius: 0.75rem;
			border: 2px solid var(--border-color);
			transition: all 0.3s ease;
		}

		.service-card:hover {
			border-color: var(--secondary-color);
			box-shadow: 0 10px 30px rgba(249, 115, 22, 0.15);
			transform: translateY(-5px);
		}

		.service-icon {
			font-size: 3rem;
			margin-bottom: 1rem;
		}

		.service-card h3 {
			color: var(--primary-color);
			margin-bottom: 1rem;
		}

		.service-link {
			color: var(--secondary-color);
			font-weight: 600;
			margin-top: 1rem;
			display: inline-block;
			transition: transform 0.3s ease;
		}

		.service-link:hover {
			transform: translateX(5px);
		}

		.service-process {
			background-color: var(--light-bg);
			padding: 4rem 0;
		}

		.service-process h2 {
			text-align: center;
			margin-bottom: 3rem;
		}

		.process-steps {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 2rem;
		}

		.step {
			text-align: center;
			padding: 2rem;
			background-color: white;
			border-radius: 0.75rem;
		}

		.step-number {
			width: 50px;
			height: 50px;
			background-color: var(--secondary-color);
			color: white;
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 1.5rem;
			font-weight: 700;
			margin: 0 auto 1rem;
		}

		.step h3 {
			color: var(--primary-color);
		}
	</style>
</Layout>
