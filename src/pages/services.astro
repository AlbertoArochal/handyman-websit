			font-size: 3rem;
			margin-bottom: 1rem;
		}

		.service-card h3 {
			color: var(--primary-color);
			margin-bottom: 1rem;
		}

		.service-link {
			color: var(--secondary-color);
			font-weight: 600;
			margin-top: 1rem;
			display: inline-block;
			transition: transform 0.3s ease;
		}

		.service-link:hover {
			transform: translateX(5px);
		}

		.service-process {
			background-color: var(--light-bg);
			padding: 4rem 0;
		}

		.service-process h2 {
			text-align: center;
			margin-bottom: 3rem;
		}

		.process-steps {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: 2rem;
		}

		.step {
			text-align: center;
			padding: 2rem;
			background-color: var(--card-bg);
			border-radius: 0.75rem;
		}

		.step-number {
			width: 50px;
			height: 50px;
			background-color: var(--secondary-color);
			color: white;
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 1.5rem;
			font-weight: 700;
			margin: 0 auto 1rem;
		}

		.step h3 {
			color: var(--primary-color);
		}

		@media (max-width: 768px) {
			.services-hero {
				padding: 3rem 0;
			}

			.services-hero h1 {
